<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/homeval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="51dp"
                    android:text="Home value" />

                <EditText
                    android:id="@+id/homevalueinput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="62dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/downpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="29dp"
                    android:text="Down Payment" />

                <EditText
                    android:id="@+id/downpayinput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/apr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingRight="99dp"
                    android:text="APR" />

                <EditText
                    android:id="@+id/aprinput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="62dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="84dp"
                    android:text="Terms" />

                <EditText
                    android:id="@+id/termsinput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="62dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/taxrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="70dp"
                    android:text="Tax Rate" />

                <EditText
                    android:id="@+id/taxrateinput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="408dp"
                android:layout_height="78dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totaltaxpaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="35dp"
                    android:text="Total Tax Paid" />

                <TextView
                    android:id="@+id/totaltaxpaidoutput"
                    android:layout_width="213dp"
                    android:layout_height="45dp"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="68dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalinterespaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="Total interest paid" />

                <TextView
                    android:id="@+id/totalinterespaidoutput"
                    android:layout_width="213dp"
                    android:layout_height="45dp"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/monthlypayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="Monthly payment" />

                <TextView
                    android:id="@+id/monthlypaymentoutput"
                    android:layout_width="213dp"
                    android:layout_height="45dp"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="51dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/payoffdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="52dp"
                    android:text="Payoff date" />

                <TextView
                    android:id="@+id/payoffdateoutput"
                    android:layout_width="213dp"
                    android:layout_height="45dp"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="95dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/calculate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="calculate"
                    android:text="Calculate" />

                <Button
                    android:id="@+id/reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:onClick="reset"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>